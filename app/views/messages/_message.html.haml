.right-contents__first
  ..right-contents__first__user
    .right-contents__first__user__name 
      = message.user.name
    .right-contents__first__user__time 
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .right-contents__first__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?